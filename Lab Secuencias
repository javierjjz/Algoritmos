#include <iostream>
#include <conio.h>
using namespace std;

void fibonacci (int n){
	int i,aux,b=1,a=0;
	for(i=0;i<n;i++){
		aux=a;
		cout<<a+b<<" , ";
		a=a+b;
		b=aux;
	}
}

void serieImpares(int n){
	int i, imp=1;
	for(i=0;i<n;i++){
		cout<<imp<<", ";
		imp=imp+2;
	}
}

bool verifPrimo(int n){
	int i;
	bool k=true;
	for(i=2;i<n;i++){
		if(n%i==0){
			k=false;
		}
	}
	return(k);
}

int Nprimo(int n){
	int c=0,d=0;
	while(d<n){
		c++;
		if(verifPrimo(c)==true){
			d++;
		}
	}
	return(c);
}

void seriePrimo(int n){
	int i,p=1;
	for(i=1;i<=n;i++){
		cout<<Nprimo(i)<<", ";
	}
}

void seriePares(int n){
	int i,p=2;
	for(i=0;i<n;i++){
		cout<<p<<", ";
		p=p+2;
	}
}

void serieImparPrimoPar(int n){
	int i,k=0,imp,pr,par;
	for(i=0;i<n;i++){
		if(k==0){
			imp=serieImpares(n);
			cout<<imp<<", ";
			k=1;
		}
		else{
			if(k==1){
				pr=seriePrimo(n);
				cout<<pr<<", ";
				k=2;
			}
			else{
				if(k==2){
					par=seriePares(n);
					cout<<par<<", ";
					k=0;
				}
			}
		}
	}
}


void main(){
	int n;
	cout<<"Ingrese la cantidad de numeros: ";
	cin>>n;
	cout<<endl<<"La serie fibonacci es: ";
	fibonacci(n);
	cout<<endl<<"La serie de impares es: ";
	serieImpares(n);
	cout<<endl<<"La serie de primos es: ";
	seriePrimo(n);
	cout<<endl<<"La serie impar, primo, par es: ";
	serieImparPrimoPar(n);
	getch();
}
